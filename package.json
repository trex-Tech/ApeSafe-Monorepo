{
  "name": "apesafe-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/foundry",
      "packages/react",
      "packages/django-rest"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "scripts": {
    "postinstall": "husky install",
    "compile": "yarn workspace @apesafe-monorepo/foundry compile",
    "foundry:test": "yarn workspace @apesafe-monorepo/foundry compile",
    "test": "forge foundry:test",
    "react:start": "yarn workspace @apesafe-monorepo/react dev",
    "react:build": "yarn workspace @apesafe-monorepo/react build",
    "react:lint": "yarn workspace @apesafe-monorepo/react lint",
    "react:preview": "yarn workspace @apesafe-monorepo/react preview",
    "django:start": "yarn workspace @apesafe-monorepo/django-rest dev" 
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.sol": "forge fmt"
  }
}
